{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "baseUrl": ".",
    "paths": {
      "ern-*": ["ern-*/src"]
    },
    "typeRoots": ["node_modules/@types", "./typings"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "noImplicitAny": true
  }
}
