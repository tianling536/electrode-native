{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2017"],
    "baseUrl": ".",
    "paths": {
      "ern-*": ["ern-*/src"]
    },
    "typeRoots": ["node_modules/@types", "./typings"],
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "noImplicitAny": true
  }  
}
