    "@types/get-folder-size": "^2.0.0",
    "@types/glob": "^7.1.3",
    "@types/got": "^9.6.11",
    "@types/hapi__joi": "^15.0.4",
    "@types/inquirer": "^6.5.0",
    "@types/js-beautify": "^1.13.1",
    "@types/jsonpath": "^0.2.0",
    "@types/lodash": "^4.14.158",
    "@types/mocha": "^5.2.7",
    "@types/mustache": "^4.0.1",
    "@types/node-fetch": "^2.5.7",
    "@types/semver": "^6.2.1",
    "@types/shelljs": "^0.8.8",
